	String url = "http://137.194.27.139/premiertest/nouvelUser.php?user=" + User;
	if (urlExists(url)){
		try{
			new URL(url);
		}
		catch (IOException ex) {
            System.out.println("Erreur dans l'ouverture de l'URL : " + ex);
    } finally{  }
	}
	else {
        System.out.println("Le site n'existe pas !");
}
}
}
